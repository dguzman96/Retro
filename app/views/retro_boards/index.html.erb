<p id="notice"><%= notice %></p>

<h1>Retro Boards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @retro_boards.each do |retro_board| %>
      <tr>
        <td><%= retro_board.title %></td>
        <td><%= retro_board.description %></td>
        <td><%= link_to 'Show', retro_board %></td>
        <td><%= link_to 'Edit', edit_retro_board_path(retro_board) %></td>
        <td><%= link_to 'Destroy', retro_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

