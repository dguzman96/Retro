<div class="row clearfix">
 <% if retro_item.completed? %>
  <div class="complete">
   <%= link_to "Mark as Complete", complete_retro_board_retro_item_path(@retro_board, retro_item.id), method: :patch %>
  </div>
  <div class="retro_item">
   <p style="opacity: 0.4;"><strike><%= retro_item.content %></strike></p>
  </div>
  <div class="trash">
   <%= link_to "Delete", retro_board_retro_item_path(@retro_board, retro_item.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
 <% else %>
  <div class="complete">
   <%= link_to "Mark as Complete", complete_retro_board_retro_item_path(@retro_board, retro_item.id), method: :patch %>
  </div>
  <div class="retro_item">
   <p><%= retro_item.content %></p>
  </div>
  <div class="trash">
   <%= link_to "Delete", retro_board_retro_item_path(@retro_board, retro_item.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
 <% end %>
</div>
